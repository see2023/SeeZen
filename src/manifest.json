{
	"manifest_version": 3,
	"name": "SeeZen",
	"version": "1.0.0",
	"description": "An immersive Pomodoro timer and website blocker",
	"permissions": [
	  "storage",
	  "alarms",
	  "notifications",
	  "webRequest",
	  "webNavigation",
	  "declarativeNetRequest",
	  "offscreen",
	  "tabs"
	],
	"host_permissions": [
	  "<all_urls>"
	],
	"background": {
	  "service_worker": "src/pages/background/index.ts",
	  "type": "module"
	},
	"action": {
	  "default_popup": "src/pages/popup/index.html",
	  "default_icon": {
		"16": "src/public/icons/icon16.png",
		"32": "src/public/icons/icon32.png",
		"48": "src/public/icons/icon48.png",
		"128": "src/public/icons/icon128.png"
	  }
	},
	"icons": {
	  "16": "src/public/icons/icon16.png",
	  "32": "src/public/icons/icon32.png",
	  "48": "src/public/icons/icon48.png",
	  "128": "src/public/icons/icon128.png"
	},
	"options_ui": {
	  "page": "src/pages/options/index.html",
	  "open_in_tab": true
	},
	"content_scripts": [
	  {
		"matches": ["<all_urls>"],
		"js": ["src/pages/content/index.ts"]
	  }
	],
	"web_accessible_resources": [
	  {
		"resources": [
		  "src/pages/blocked/*",
		  "src/pages/blocked/libs/*",
		  "assets/*",
		  "src/public/sounds/*.mp3",
		  "src/public/*",
		  "fonts/*"
		],
		"matches": ["<all_urls>"],
		"use_dynamic_url": true
	  }
	],

	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
	}
}